<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:entries="clr-namespace:MauiLib;assembly=MauiLibEntries"
             xmlns:buttons="clr-namespace:MauiLib;assembly=MauiLibButtons"
             x:Class="MauiLibraryPacks.MainPage"
             BackgroundColor="{DynamicResource SecondaryColor}">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">

            <entries:MauiLibEntry
                Text="Entry"
                IsHappy="false"
                WidthRequest="200"
                HorizontalOptions="Center" />

            <buttons:MauiLibButton
                Text="Button"
                IsHappy="true"
                WidthRequest="200"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
